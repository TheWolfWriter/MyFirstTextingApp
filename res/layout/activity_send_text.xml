<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/smsEditNumberTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/smsNumberEditText"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/smsEditContentTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smsEditNumberTextField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/smsContentEditText"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/smsEditNumberTextField"
        android:layout_centerVertical="true"
        android:text="@string/sendSMSButton" />

</RelativeLayout>